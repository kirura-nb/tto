
<div style="width: 400px; margin: 0 auto; text-align: center; font-family: Arial, sans-serif;">
  
  <div>
    <h1>ロゴ</h1>
  </div>
  <h2>新規登録画面</h2>
  <%= form_with local: true do |f| %>
    <div style="margin-bottom: 10px;">
      <%= f.label :name, "氏名" %><br>
      <%= f.text_field :name, placeholder: "YamadaTaro", style: "width: 100%; padding: 5px;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :department, "学科名" %><br>
      <%= f.text_field :department, placeholder: "IT", style: "width: 100%; padding: 5px;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :student_id, "ID/学籍番号" %><br>
      <%= f.text_field :student_id, placeholder: "JR2099", style: "width: 100%; padding: 5px;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :password, "パスワード" %><br>
      <%= f.password_field :password, placeholder: "半角数字で8文字から16文字まで", style: "width: 100%; padding: 5px;" %>
    </div>

    <div style="margin-bottom: 10px;">
      <%= f.label :password_confirmation, "パスワード（確認）" %><br>
      <%= f.password_field :password_confirmation, style: "width: 100%; padding: 5px;" %>
    </div>

    <div>
      <%= f.submit "登録", style: "width: 100%; padding: 10px; background-color: #ADD8E6; border: none; font-size: 16px;" %>
    </div>
  <% end %>
 
</div>
