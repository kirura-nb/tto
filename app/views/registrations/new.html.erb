<div class="new_form_box">
  <div>
    <h1>ロゴ</h1>
  </div>
  <h2>新規登録画面</h2>
  <%= form_with model: @user_new, url:registrations_path, local: true, method: :post do |f| %>
    <div class="form_box">
      <%= f.label :name, "氏名" %>
      <%= f.text_field :name, placeholder: "YamadaTaro", class: "text_box" %>
    </div>

    <div class="form_box">
      <%= f.label :department, "学科名" %>
      <%= f.select :id, @departments, {prompt: "選択してください"}, class: "text_box", id: "department_id" %>
    </div>

    <div class="form_box">
      <%= f.label :student_id, "ID/学籍番号" %>
      <%= f.text_field :student_id, placeholder: "JR2099", class: "text_box" %>
    </div>

    <div class="form_box">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, placeholder: "半角数字で8文字から16文字まで", class: "text_box" %>
    </div>

    <div class="form_box">
      <%= f.label :password_confirmation, "パスワード（確認）" %>
      <%= f.password_field :password_confirmation, class: "text_box" %>
    </div>

    <%= f.submit "登録", class: "btn" %>
  <% end %>
</div>
