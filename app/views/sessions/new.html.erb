<div class="container">
    <div class="logo">
      <div class="circle">ロゴ</div>
      <h1>ログイン画面</h1>
    </div>
    <%= form_with  class: "login-form", local: true do |f| %>
      <div class="form-group">
        <%= f.label :id, "ID/学籍番号" %>
        <%= f.text_field :id, placeholder: "JR2099", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, placeholder: "半角数字で8文字から16文字まで", class: "form-control" %>
      </div>
    <%= f.submit "ログイン", class: "login-button" %>
  <% end %>
  <div class="links">
    <%= link_to "新規登録", new_user_path %>
    <%= link_to "パスワードを忘れた場合" %>
  </div>
  </div>

