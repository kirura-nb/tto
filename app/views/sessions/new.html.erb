<div class="login-container">
  <div class="logo">
    <div class="circle">ロゴ</div>
    <h1>ログイン画面</h1>
  </div>
  <%= form_with  class: "login-form", url:create_sessions_path, local: true, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :department, "ID/学籍番号" %>
      <%= f.text_field :department, placeholder: "JR2099", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, placeholder: "半角数字で8文字から16文字まで", class: "form-control" %>
    </div>
    <%= f.submit "ログイン", class: "login-button" %>
  <% end %>
  <div class="links">
    <%= link_to "新規登録", new_registrations_path %>
    <%= link_to "パスワードを忘れた場合" %>
  </div>
</div>